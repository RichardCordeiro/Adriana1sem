<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="concord.tarefa3.controllers.SaiaController">
    <children>
        <Label layoutX="200" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Saia" />

        <Label layoutX="50" layoutY="80" text="Cor:" />
        <TextField fx:id="txtCor" layoutX="161.0" layoutY="76.0" prefWidth="200" />

        <Label layoutX="50" layoutY="120" text="Comprimento (cm):" />
        <TextField fx:id="txtComprimento" layoutX="161.0" layoutY="116.0" prefWidth="200" />

        <Label layoutX="50" layoutY="160" text="Tecido:" />
        <TextField fx:id="txtTecido" layoutX="161.0" layoutY="156.0" prefHeight="25.0" prefWidth="200.0" />

        <Label layoutX="50" layoutY="195" text="Plissada?" />
        <CheckBox fx:id="chkPlissada" layoutX="161.0" layoutY="195.0" />

        <Button layoutX="60" layoutY="240" onAction="#criarSaia" text="Criar Saia" />
        <Button layoutX="237.0" layoutY="240.0" onAction="#lavarSaia" text="Lavar Saia" />
        <Button layoutX="429.0" layoutY="240.0" onAction="#vestirSaia" text="Vestir Saia" />


        <TextArea fx:id="textResultado" layoutX="50" layoutY="280" prefHeight="100" prefWidth="500" />
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="380.0" layoutY="40.0" pickOnBounds="true">
            <image>
                <Image url="@imagens/saias.jpeg" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
